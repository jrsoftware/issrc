    <script>
        // × ×ª×•× ×™ ×”××•×¦×¨×™×
        const products = [
            { id: 1, name: "×¡×•×›×ª ×™×¨×•×©×œ×™× ×‘×¡×™×¡×™×ª 2.1×", price: 1555, category: "sukkot" },
            { id: 2, name: "×¡×•×›×ª ×”××œ×š ×“×•×“ 2.3×", price: 1665, category: "sukkot" },
            { id: 3, name: "×¡×•×›×” ×¢× ×§×™×ª 2.5×", price: 3085, category: "sukkot" },
            { id: 4, name: "×¡×•×›×” ×‘×¡×™×¡×™×ª 2X2", price: 1126, category: "sukkot" },
            { id: 5, name: "×¡×•×›×ª ×”×›×œ ×›×œ×•×œ 2X3", price: 1719.5, category: "sukkot" },
            { id: 6, name: "×¡×•×›×ª ×”×›×œ ×›×œ×•×œ 3X3", price: 2159.5, category: "sukkot" },
            { id: 7, name: "×‘×“ ×›×•×ª× ×” 1.5×", price: 90, category: "fabrics" },
            { id: 8, name: "×‘×“ ×›×•×ª× ×” 2×", price: 110, category: "fabrics" },
            { id: 9, name: "×‘×“ ×›×•×ª× ×” 3×", price: 165, category: "fabrics" },
            { id: 10, name: "×‘×“ ××¦× ×— 3×", price: 200, category: "fabrics" },
            { id: 11, name: "×‘×“ ××•×“×¤×¡ 2×", price: 140, category: "fabrics" },
            { id: 12, name: "×‘×“ ××•×“×¤×¡ 3×", price: 210, category: "fabrics" },
            { id: 13, name: "×¡×›×š ×‘××‘×•×§ - ×\"×¨", price: 30, category: "sechach" },
            { id: 14, name: "×¡×›×š ×¤×¤×™×¨×•×¡ - ×\"×¨", price: 43, category: "sechach" },
            { id: 15, name: "×¡×›×š ×¨×¤×™×” - ×\"×¨", price: 46, category: "sechach" },
            { id: 16, name: "×¡×›×š ×§× ×™× - ×\"×¨", price: 17, category: "sechach" }
        ];

        let cart = [];
        let currentCategory = 'all';

        // ××ª×—×•×œ ×”××¤×œ×™×§×¦×™×”
        function init() {
            renderProducts();
            setupEventListeners();
        }

        // ×”×¦×’×ª ×”××•×¦×¨×™×
        function renderProducts() {
            const container = document.getElementById('products-container');
            container.innerHTML = '';
            
            const filteredProducts = currentCategory === 'all' 
                ? products 
                : products.filter(p => p.category === currentCategory);
            
            filteredProducts.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-title">${product.name}</div>
                    <div class="product-price">â‚ª${product.price}</div>
                    <div>
                        <label>×›××•×ª:</label>
                        <input type="number" min="1" value="1" id="qty-${product.id}" style="width: 60px;">
                    </div>
                    <button onclick="addToCart(${product.id})">×”×•×¡×£ ×œ×¡×œ</button>
                `;
                container.appendChild(productCard);
            });
        }

        // ×”×•×¡×¤×” ×œ×¡×œ
        function addToCart(productId) {
            const quantity = parseInt(document.getElementById(`qty-${productId}`).value) || 1;
            const product = products.find(p => p.id === productId);
            
            const existingItem = cart.find(item => item.product.id === productId);
            if (existingItem) {
                existingItem.quantity += quantity;
            } else {
                cart.push({ product, quantity });
            }
            
            alert('×”××•×¦×¨ × ×•×¡×£ ×œ×¡×œ ×‘×”×¦×œ×—×”!');
            updateCart();
        }

        // ×¢×“×›×•×Ÿ ×”×¡×œ
        function updateCart() {
            const container = document.getElementById('cart-items');
            container.innerHTML = '';
            
            if (cart.length === 0) {
                container.innerHTML = '<p>×”×¡×œ ×©×œ×š ×¨×™×§</p>';
            } else {
                cart.forEach(item => {
                    const cartItem = document.createElement('div');
                    cartItem.className = 'cart-item';
                    cartItem.innerHTML = `
                        <div>${item.product.name} (${item.quantity})</div>
                        <div>â‚ª${item.product.price * item.quantity}</div>
                    `;
                    container.appendChild(cartItem);
                });
            }
            
            // ×¢×“×›×•×Ÿ ×¡×™×›×•××™×
            const subtotal = cart.reduce((sum, item) => sum + (item.product.price * item.quantity), 0);
            const tax = subtotal * 0.17;
            const shipping = subtotal > 0 ? 200 : 0;
            const total = subtotal + tax + shipping;
            
            document.getElementById('subtotal').textContent = `â‚ª${subtotal.toFixed(2)}`;
            document.getElementById('tax').textContent = `â‚ª${tax.toFixed(2)}`;
            document.getElementById('shipping').textContent = `â‚ª${shipping.toFixed(2)}`;
            document.getElementById('total').textContent = `â‚ª${total.toFixed(2)}`;
        }

        // ××¢×‘×¨ ×‘×™×Ÿ ×˜××‘×™×
        function setupEventListeners() {
            // ××¢×‘×¨ ×‘×™×Ÿ ×˜××‘×™×
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
                    
                    tab.classList.add('active');
                    document.getElementById(`${tab.dataset.tab}-tab`).classList.add('active');
                });
            });
            
            // ×›×¤×ª×•×¨×™ ×§×˜×’×•×¨×™×•×ª
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    currentCategory = btn.dataset.category;
                    renderProducts();
                });
            });
            
            // ××¢×‘×¨ ×œ×”×–×× ×”
            document.getElementById('checkout-btn').addEventListener('click', () => {
                if (cart.length === 0) {
                    alert('×¡×œ ×”×§× ×™×•×ª ×¨×™×§. ×× × ×”×•×¡×£ ××•×¦×¨×™× ×œ×¤× ×™ ×”××¢×‘×¨ ×œ×”×–×× ×”.');
                    return;
                }
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
                document.querySelector('[data-tab="checkout"]').classList.add('active');
                document.getElementById('checkout-tab').classList.add('active');
            });
            
            // ××™×©×•×¨ ×”×–×× ×”
            document.getElementById('confirm-order-btn').addEventListener('click', () => {
                const name = document.getElementById('customer-name').value;
                const phone = document.getElementById('customer-phone').value;
                const address = document.getElementById('customer-address').value;
                
                if (!name || !phone || !address) {
                    alert('×× × ××œ× ××ª ×›×œ ×©×“×•×ª ×”×—×•×‘×” ×”××¡×•×× ×™× ×‘-*');
                    return;
                }
                
                // ×”×“××™×™×ª ×©×œ×™×—×” ×œ××¢×¨×›×ª ×”×§×•×¤×”
                const orderDetails = {
                    customer: { name, phone, address },
                    items: cart,
                    total: document.getElementById('total').textContent
                };
                
                console.log('Order details:', orderDetails);
                alert('×”×”×–×× ×” ×‘×•×¦×¢×” successfully! ×¤×¨×˜×™ ×”×”×–×× ×” × ×©×œ×—×• ×œ×§×•×¤×”.');
                
                // ××™×¤×•×¡
                cart = [];
                updateCart();
                document.querySelectorAll('input').forEach(input => input.value = '');
                
                // ×—×–×¨×” ×œ×˜××‘ ××•×¦×¨×™×
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
                document.querySelector('[data-tab="products"]').classList.add('active');
                document.getElementById('products-tab').classList.add('active');
            });
        }

        // ×”×¤×¢×œ×ª ×”××¤×œ×™×§×¦×™×”
        window.onload = init;
    </script>
